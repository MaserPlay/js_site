<!DOCTYPE html>
<html lang='<%= getLocale() %>' data-bs-theme='<%= theme() %>' data-bs-event-theme='<%= event() %>'> 
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="MaserPlay">
    <title><%= name %> - JS MaserPlay's Projects</title>
    <meta name="description" content="<%= description %>">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="<%= css_include('https://maserplay.ru/css/site') %>" rel="stylesheet" />
    <link rel="stylesheet" href="<%= css_include('https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons') %>">
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="<%= name %> - JS MaserPlay's Projects" />
    <meta property="og:description" content="<%= description %>" />
    <meta property="og:image" content="/favicon.ico" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <% if (true) { %>
        <!-- Yandex.Metrika counter -->
        <script async type="text/javascript" >
            (function(m,e,t,r,i,k,a){m[i]=m[i]||function(){(m[i].a=m[i].a||[]).push(arguments)};
            m[i].l=1*new Date();
            for (var j = 0; j < document.scripts.length; j++) {if (document.scripts[j].src === r) { return; }}
            k=e.createElement(t),a=e.getElementsByTagName(t)[0],k.async=1,k.src=r,a.parentNode.insertBefore(k,a)})
            (window, document, "script", "https://mc.yandex.ru/metrika/tag.js", "ym");
        
            ym(97253488, "init", {
                clickmap:true,
                trackLinks:true,
                accurateTrackBounce:true
            });
        </script>
        <noscript><div><img src="https://mc.yandex.ru/watch/97253488" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
        <!-- /Yandex.Metrika counter -->
    <% } %>
	<link rel="stylesheet" href="/index.css">
    <% if (eventGoingSnow()) { %>
        <link rel="stylesheet" href="/snow.css">
    <% } %>
    <%- style %>
    <% if (styleOfPage == pageStyle().Fullscreen) { %>
        <style>
            footer {
                bottom: 0 !important;
                position: fixed !important;
                width: 100% !important;
                backdrop-filter: blur(3px);
                transition: transform 0.5s ease-in-out;
                transform: translateY(90%);
                z-index: 999;
            }
            footer:hover {
                transform: translateY(0%);
            }
            header {
                backdrop-filter: blur(2px);
                position: fixed !important;
                z-index: 999;
            }
            .right_panel{
                font-size: 1.5rem; 
                padding: 10px 30px; 
                top: 0px;
                right: 0px;
                transform: translateX(90%);
                transition: transform 0.5s ease-in-out;
            }
            .right_panel:hover{
                transform: translateX(0%);
            }
        </style>
    <% } %>
    <%- meta %>
</head>

<body class="d-flex flex-column min-vh-100">
    <% if (styleOfPage == pageStyle().Standart) { %>
        <header class="navbar border-bottom">
            <div class="container">
                <div class="branding">
                    <a class="navbar-brand logo" href="/">
                        <!-- <p class="text-warning-emphasis fs-6">Js things</p> -->
                        <strong class="logo_yellow">js.</strong><strong>maserplay.ru</strong>
                    </a>
                    <noscript class="text-white"><%= __('! Warning Javascript is disabled ! Some things may not work properly') %></noscript>
                </div>
                <div class="actions">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <button type="button" id="theme-change" data-bs-toggle="dropdown" class="btn bi bi-patch-question-fill" data-bs-toggle="dropdown" aria-expanded="false"><span class="visually-hidden"><%= __('Change theme') %></span></button>
                            <ul class="dropdown-menu" style="left: auto;right: 0px;position: absolute;">
                                <% themes().forEach(themeThis => { %>
                                    <li><a class="dropdown-item scChngThm <%= theme() == themeThis ? "active" : "" %>" val="<%= themeThis %>" style="cursor: pointer;"><%= __(themeThis) %></a></li>
                                <% }) %>
                            </ul>
                            <button type="button" id="lang-change" data-bs-toggle="dropdown" class="btn bi bi-globe" data-bs-toggle="dropdown" aria-expanded="false"><span class="visually-hidden"><%= __('Change Language') %></span></button>
                            <ul class="dropdown-menu" style="left: auto;right: 0px;position: absolute;">
                                <% (["auto_locale"].concat(getLocales())).forEach(local => { %>
                                    <li><a class="dropdown-item scChngLang <%= (lang()&&(getLocale() === local)||(!lang()&&local==="auto_locale")) ? "active" : "" %>" val="<%= local %>" style="cursor: pointer;"><%= __({ phrase: local, locale: local==="auto_locale"?getLocale():local }) %></a></li>
                                <% }) %>
                            </ul>
                            <button type="button" class="btn bi bi-question-lg popovers_cls" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="bottom" data-bs-content="<%= description %>">
                                <span class="visually-hidden"><%= __('About Project') %></span>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </header>
    <% } else { %>
        <header style="font-size: 1.5rem; top:0px; padding: 10px 30px;">
            <a class="text-decoration-none" style="color: var(--bs-emphasis-color-rgb);" href="/">
                <!-- <p class="text-warning-emphasis fs-6">Js things</p> -->
                <strong class="logo_yellow">js.</strong><strong>maserplay.ru</strong>
            </a>
        </header>
        <header class="right_panel">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item dropdown">
                    <button type="button" id="theme-change" data-bs-toggle="dropdown" class="btn bi bi-patch-question-fill" data-bs-toggle="dropdown" aria-expanded="false"><span class="visually-hidden"><%= __('Change theme') %></span></button>
                    <ul class="dropdown-menu" style="left: auto;right: 0px;position: absolute;">
                        <% themes().forEach(themeThis => { %>
                            <li><a class="dropdown-item scChngThm <%= theme() == themeThis ? "active" : "" %>" val="<%= themeThis %>" style="cursor: pointer;"><%= __(themeThis) %></a></li>
                        <% }) %>
                    </ul>
                    <button type="button" id="lang-change" data-bs-toggle="dropdown" class="btn bi bi-globe" data-bs-toggle="dropdown" aria-expanded="false"><span class="visually-hidden"><%= __('Change Language') %></span></button>
                    <ul class="dropdown-menu" style="left: auto;right: 0px;position: absolute;">
                        <% (["auto_locale"].concat(getLocales())).forEach(local => { %>
                            <li><a class="dropdown-item scChngLang <%= (lang()&&(getLocale() === local)||(!lang()&&local==="auto_locale")) ? "active" : "" %>" val="<%= local %>" style="cursor: pointer;"><%= __({ phrase: local, locale: local==="auto_locale"?getLocale():local }) %></a></li>
                        <% }) %>
                    </ul>
                    <button type="button" class="btn bi bi-question-lg popovers_cls" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="bottom" data-bs-content="<%= description %>">
                        <span class="visually-hidden"><%= __('About Project') %></span>
                    </button>
                </li>
            </ul>
        </header>
    <% } %>
    <% if (eventGoingSnow()) { %>
        <div class="snow-main">
            <% function getRandomArbitrary(min, max) {
                return Math.random() * (max - min) + min;
            } %>
            <% for( let i = 0; i < 50; i++ ) { %>
                <div style="<%= `--size: ${getRandomArbitrary(.1, 1)}vw; --left-ini: ${getRandomArbitrary(-9, 9)}vw; --left-end: ${getRandomArbitrary(-9, 9)}vw; left: ${getRandomArbitrary(100, 5)}vw; animation: snowfall ${getRandomArbitrary(5, 15)}s linear infinite; animation-delay: ${getRandomArbitrary(-1, -10)}s; font-size: ${getRandomArbitrary(30, 60)}px; filter: blur(${getRandomArbitrary(0, 3)}px)` %>" class="bi bi-snow"></div>
            <% } %>
        </div>    
    <% } %>

    <% if (styleOfPage == pageStyle().Standart) { %>
        <div class="container-fluid">
            <main role="main" class="pb-3">
                <noscript>
                    <section class="jumbotron text-center">
                        <div class="container">
                            <h1><%= __('Please enable JavaScript. This is a website written entirely in JavaScript.') %></h1>
                        </div>
                    </section>
                </noscript>

                <div class="py-4">
                    <div class="container">
                        <%- body %>
                    </div>
                </div>

            </main>
        </div>
    <% } else { %>
        <%- body %>
    <% } %>

    <footer class="text-muted text-secondary mt-auto">
        <div class="container footer-container">
            <div class="my-4">
                <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                    <li class="nav-item">
                        <a class="nav-link px-2 text-body-secondary" href="https://github.com/MaserPlay/js_site" title="<%= __('Source Code on Github') %>" rel="nofollow"><%= __('Source Code') %></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-2 text-body-secondary" href="mailto:admin@maserplay.ru" title="<%= __('Contact us!') %>" rel="nofollow">admin@maserplay.ru</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-2 text-body-secondary" href="https://maserplay.ru/?utm_source=js_maserplay&utm_medium=cpc&utm_content=down_link" title="maserplay.ru" rel="nofollow"><%= __('Main Site' ) %></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-2 text-body-secondary" href="https://maserplay.ru/Donate/?utm_source=js_maserplay&utm_medium=cpc&utm_content=down_link" title="<%= __('Donation without remuneration') %>" rel="nofollow"><%= __("Donate me )")%></a>
                    </li>
                </ul>
            </div>
        </div>
    </footer>
            
    <script defer src="<%= js_include('https://code.jquery.com/jquery-3.7.1') %>"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>    
    <script defer src="<%= js_include('/index') %>"></script>
    <script defer src="<%= js_include('index') %>"></script>
    <%- script %>
</body>

</html>
