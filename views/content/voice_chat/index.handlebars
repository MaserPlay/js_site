      <p style="margin-bottom:auto"><span class="bi bi-bar-chart-fill text-secondary" style="margin:3px"></span><span
          id="ping" class="text-decoration-line-through">{{__ 'ping'}}</span></p>
      <h3 id="username-label">{{__ 'Username'}}</h3>
